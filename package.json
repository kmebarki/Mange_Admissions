{
  "name": "admissions-suite",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "openapi"
  ],
  "scripts": {
    "dev:backend": "tsx apps/backend/src/index.ts",
    "dev:web": "next dev -p 3000 -w apps/web",
    "dev": "concurrently -k -n backend,web \"pnpm dev:backend\" \"pnpm --filter @adms/web dev\"",
    "build": "pnpm -r build",
    "postinstall": "pnpm -r install",
    "gen:sdk": "pnpm --filter @adms/sdk generate",
    "prisma:generate": "pnpm --filter @adms/backend prisma generate",
    "prisma:migrate": "pnpm --filter @adms/backend prisma migrate dev --name init"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
